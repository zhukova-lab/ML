footer.footer
    .footer-wrapper.container
        .footer-info 
            include logo 
            p.text.footer-text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        nav.footer-nav 
            .footer-nav-item
                h2.subtitle.footer-nav-subtitle навигация
                +footerList(['О нас','Новости','Служба поддержки','Услуги'])
            .footer-nav-item
                h2.subtitle.footer-nav-subtitle о нас
                +footerList(['О сервисе','Наша команда','Вакансии','Инвесторы'])
            .footer-nav-item
                h2.subtitle.footer-nav-subtitle Служба поддержки
                +footerList(['Соглашения','Сообщества','Связь с нами'])
        .footer-subscription
            h2.subtitle.footer-subtitle Подписка
            p.text.footer-text Получайте специальные предложения и новости сервиса
            +formItem('email','Email','arrow_forward')(class='footer-subscription-icon')
    .footer-restangle 
    .footer-copy.container 
        p.text.footer-copy-text Copyright © 2018 Toxin отель. Все права защищены.
        .social-button 
            +socialButton('#','twitter')
            +socialButton('#','facebook-square')
            +socialButton('#','instagram')
