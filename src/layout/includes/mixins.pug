//-button
mixin button(name,icon)
    if icon 
        button.button(class=attributes.class)=name
            i(class="button-icon material-icons")=icon
    else
        button.button(class=attributes.class)=name 

//-social button
mixin socialButton(link,value)
    a.social-button-link(href = link)
        i(class="fab fa-"+value aria-hidden="true")

//-navigation link
mixin navLink(arr)
    each value in arr
        li.nav-list-item
            if value.icon
                a(href='link').nav-list-link.expand=value.name 
                    i(class='nav-list-link-icon material-icons')= value.icon
            else 
                a(href='link').nav-list-link=value.name

//-form items
mixin formItem(typeValue, placeholderValue, icon)
    if icon
        input.form-item(type=typeValue placeholder=placeholderValue)
        i.form-label-icon.form-label-icon-dropdown.material-icons(class=attributes.class)=icon
    else 
        input.form-item(type=typeValue placeholder=placeholderValue)


//-form date
mixin formDates
    .form-dates
        label.form-label прибытие      
            input.form-item.form-item-dates(type='text' placeholder='ДД.ММ.ГГГГ' id='datepicker' name='startDate' class="datepicker-here")
            i(class="form-label-icon material-icons") expand_more
        label.form-label выезд      
            input.form-item.form-item-dates(type='text' placeholder='ДД.ММ.ГГГГ' name='endDate')
            i(class='form-label-icon material-icons') expand_more


mixin footerList(arr)
    ul.footer-nav-list
        each value in arr  
            li.footer-list-item=value