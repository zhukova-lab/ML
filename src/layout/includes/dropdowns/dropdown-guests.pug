label.form-label Гости
    input.form-item.guests(type='text' placeholder='Сколько гостей')
    i(class='form-label-icon material-icons') expand_more 
    .dropdown.dropdown-guests 
        .dropdown-item.dropdown-guests-item 
            span Взрослые
            .dropdown-stepper.dropdown-guests-stepper
                button.dropdown-stepper-button.guests-stepper-button-adults-minus.guests-stepper-button-minus(type='button') -
                span.guests-stepper-counter-adults.dropdown-stepper-counter 0
                button.dropdown-stepper-button.guests-stepper-button-adults-plus.guests-stepper-button-plus(type='button') +
        .dropdown-item.dropdown-guests-item 
            span Дети
            .dropdown-stepper.dropdown-guests-stepper
                button.dropdown-stepper-button.guests-stepper-button-children-minus.guests-stepper-button-minus(type='button') -
                span.guests-stepper-counter-children.dropdown-stepper-counter 0
                button.dropdown-stepper-button.guests-stepper-button-children-plus.guests-stepper-button-plus(type='button') +
        .dropdown-item.dropdown-guests-item 
            span Младенцы
            .dropdown-stepper.dropdown-guests-stepper
                button.dropdown-stepper-button.guests-stepper-button-babies-minus.guests-stepper-button-minus(type='button') -
                span.guests-stepper-counter-babies.dropdown-stepper-counter 0
                button.dropdown-stepper-button.guests-stepper-button-babies-plus.guests-stepper-button-plus(type='button') +
        .dropdown-buttons 
            button.dropdown-button.dropdown-button-clear(type='button')  очистить
            button.dropdown-button.dropdown-button-apply(type='button') применить




